<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>net.loxal</groupId>
        <artifactId>meta</artifactId>
        <version>1.2.6</version>
    </parent>

    <groupId>net.loxal.soa</groupId>
    <artifactId>rest-kit</artifactId>
    <version>1.4.1-SNAPSHOT</version>
    <name>RESTkit</name>
    <packaging>war</packaging>
    <description>Microservice Toolkit</description>

    <properties>
        <tomcat.version>8.0.20</tomcat.version>
        <jetty-maven-plugin.version>9.2.3.v20140905</jetty-maven-plugin.version>
        <jersey.version>2.16</jersey.version>
        <spring.version>4.1.5.RELEASE</spring.version>

        <cloudFoundry.subdomain>test</cloudFoundry.subdomain>
        <cloudFoundry.stage>${cloudFoundry.subdomain}-v${parsedVersion.majorVersion}</cloudFoundry.stage>
        <cloudFoundry.org>hybris_${cloudFoundry.subdomain}</cloudFoundry.org>
        <cloudFoundry.api>.cf.hybris.com</cloudFoundry.api>
        <cloudFoundry.target>.cf1.hybris.com</cloudFoundry.target>
        <build.number>0</build.number>

        <repositoryServiceUri>http://repository-v2.${cloudFoundry.subdomain}${cloudFoundry.api}</repositoryServiceUri>
        <tenant>loxal${cloudFoundry.subdomain}</tenant>

        <deploymentTarget>http://${deployment.host.name}:${deployment.host.port}</deploymentTarget>
        <!--<deployment.host.port>${local.jetty.port}</deployment.host.port>-->
        <!--<deployment.cargo.tomcat.ajp.port>8009</deployment.cargo.tomcat.ajp.port>-->
        <local.jetty.port>8200</local.jetty.port>
        <deployment.host.name>localhost</deployment.host.name>
        <maven-compiler-plugin.optimize>false</maven-compiler-plugin.optimize>
        <maven-compiler-plugin.compilerArgument>-g:none</maven-compiler-plugin.compilerArgument>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-stdlib</artifactId>
        </dependency>
        <dependency>
            <groupId>org.glassfish.jersey.ext</groupId>
            <artifactId>jersey-spring3</artifactId>
            <version>${jersey.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
            <version>${spring.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.glassfish.jersey.ext</groupId>
            <artifactId>jersey-bean-validation</artifactId>
            <version>${jersey.version}</version>
            <scope>compile</scope>
            <!--hibernate-validator as transitive dependency is required at runtime-->
        </dependency>
        <dependency>
            <groupId>org.glassfish.jersey.containers</groupId>
            <artifactId>jersey-container-servlet</artifactId>
            <version>${jersey.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.glassfish.jersey.core</groupId>
            <artifactId>jersey-common</artifactId>
            <version>${jersey.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.glassfish.jersey.core</groupId>
            <artifactId>jersey-server</artifactId>
            <version>${jersey.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.glassfish.jersey.core</groupId>
            <artifactId>jersey-client</artifactId>
            <version>${jersey.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.glassfish.jersey.media</groupId>
            <artifactId>jersey-media-json-jackson</artifactId>
            <version>${jersey.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.glassfish.jersey.media</groupId>
            <artifactId>jersey-media-moxy</artifactId>
            <version>${jersey.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <version>3.1.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
            <version>1.9.2</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.glassfish.jersey.containers</groupId>
            <artifactId>jersey-container-grizzly2-http</artifactId>
            <version>${jersey.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.glassfish.jersey.test-framework.providers</groupId>
            <artifactId>jersey-test-framework-provider-grizzly2</artifactId>
            <version>${jersey.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/webapp/gadget</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
            </testResource>
        </testResources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.18</version>
                <configuration>
                    <includes>
                        <include>**/*IT.java</include>
                    </includes>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.2</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                    <compilerArguments>
                        <profile>compact1</profile>
                    </compilerArguments>
                    <compilerArguments>
                    </compilerArguments>
                    <compilerArgument>-Xlint:unchecked</compilerArgument>
                    <showWarnings>true</showWarnings>
                    <showDeprecation>true</showDeprecation>
                    <optimize>${java.optimize}</optimize>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.google.appengine</groupId>
                <artifactId>appengine-maven-plugin</artifactId>
                <version>1.9.17</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <tagNameFormat>v@{project.version}</tagNameFormat>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.9.1</version>
                <executions>
                    <execution>
                        <id>extract-cf-app-version</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>parse-version</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>reserve-port</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>reserve-network-port</goal>
                        </goals>
                        <configuration>
                            <portNames>
                                <portName>deployment.host.port</portName>
                                <portName>deployment.cargo.tomcat.ajp.port</portName>
                            </portNames>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.9</version>
                <executions>
                    <execution>
                        <id>download-tomcat</id>
                        <phase>package</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.apache.tomcat</groupId>
                                    <artifactId>tomcat</artifactId>
                                    <version>${tomcat.version}</version>
                                    <type>zip</type>
                                    <outputDirectory>${project.build.directory}/cargo</outputDirectory>
                                    <overWrite>true</overWrite>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.cargo</groupId>
                <artifactId>cargo-maven2-plugin</artifactId>
                <version>1.4.12</version>
                <configuration>
                    <container>
                        <containerId>tomcat8x</containerId>
                        <type>installed</type>
                        <output>${project.build.directory}/cargo/container.log</output>
                        <append>false</append>
                        <log>${project.build.directory}/cargo/cargo.log</log>
                        <home>${project.build.directory}/cargo/apache-tomcat-${tomcat.version}</home>
                    </container>
                    <deployables>
                        <deployable>
                            <pingURL>http://${deployment.host.name}:${deployment.host.port}/application.wadl</pingURL>
                            <properties>
                                <context>/</context>
                            </properties>
                        </deployable>
                    </deployables>
                    <configuration>
                        <type>standalone</type>
                        <home>${project.build.directory}/cargo/tomcat8x</home>
                        <properties>
                            <cargo.servlet.port>${deployment.host.port}</cargo.servlet.port>
                            <cargo.tomcat.ajp.port>${deployment.cargo.tomcat.ajp.port}</cargo.tomcat.ajp.port>
                        </properties>
                    </configuration>
                </configuration>
                <executions>
                    <execution>
                        <id>start-container</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>start</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>stop-container</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>stop</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.17</version>
                <configuration>
                    <systemPropertyVariables>
                        <repositoryServiceUri>invalid</repositoryServiceUri>
                    </systemPropertyVariables>
                    <environmentVariables>
                        <tenant>loxal${cloudFoundry.subdomain}</tenant>
                        <repositoryServiceUri>${repositoryServiceUri}</repositoryServiceUri>
                    </environmentVariables>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.cloudfoundry</groupId>
                <artifactId>cf-maven-plugin</artifactId>
                <version>1.4.0.KIWI-RELEASE</version>
                <configuration>
                    <server>hybris.CloudFoundry</server>
                    <target>https://api${cloudFoundry.target}</target>
                    <buildpack>https://github.com/cloudfoundry/java-buildpack.git</buildpack>
                    <appname>
                        ${project.artifactId}-${cloudFoundry.stage}-v${parsedVersion.majorVersion}-${parsedVersion.minorVersion}-${parsedVersion.incrementalVersion}-b${build.number}
                    </appname>
                    <urls>
                        <url>${project.artifactId}-${cloudFoundry.stage}.${cloudFoundry.subdomain}${cloudFoundry.api}
                        </url>
                        <url>
                            ${project.artifactId}-v${parsedVersion.majorVersion}-${parsedVersion.minorVersion}-${parsedVersion.incrementalVersion}-b${build.number}.${cloudFoundry.subdomain}${cloudFoundry.api}
                        </url>
                    </urls>
                    <org>${cloudFoundry.org}</org>
                    <space>team-keen.kiwis</space>
                    <path>${project.build.directory}/${project.build.finalName}.war</path>
                    <instances>2</instances>
                    <retainNumberOfBuilds>2</retainNumberOfBuilds>
                    <memory>512</memory>
                    <trustSelfSignedCerts>true</trustSelfSignedCerts>
                    <services>
                        <service>
                            <name>logstash-${cloudFoundry.stage}</name>
                            <label>user-provided</label>
                            <userProvidedCredentials/>
                            <syslogDrainUrl>syslog://logstash.cf1.hybris.com:5000</syslogDrainUrl>
                        </service>
                    </services>
                    <env>
                        <tenant>${tenant}</tenant>
                        <repositoryServiceUri>${repositoryServiceUri}</repositoryServiceUri>
                    </env>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.eclipse.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>${jetty-maven-plugin.version}</version>
                <configuration>
                    <scanIntervalSeconds>1</scanIntervalSeconds>
                    <contextXml>${basedir}/jetty-context.xml</contextXml>
                    <httpConnector>
                        <port>${local.jetty.port}</port>
                    </httpConnector>
                    <stopKey>someStopKey</stopKey>
                    <stopPort>8101</stopPort>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jetbrains.kotlin</groupId>
                <artifactId>kotlin-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
    <profiles/>

    <scm>
        <connection>scm:git:git://github.com:loxal/rest-kit.git</connection>
        <developerConnection>scm:git:git@github.com:loxal/rest-kit.git</developerConnection>
        <url>https://github.com/loxal/rest-kit</url>
        <tag>HEAD</tag>
    </scm>
    <inceptionYear>2014</inceptionYear>
    <url>http://www.loxal.net</url>
</project>
